<div class="all-recipe">
<p id="notice"><%= notice %></p>

<h1 id="discover-title">Recipes</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @recipes.each do |recipe| %>
      <tr>
        <td><%= recipe.name %></td>
        <td><%= link_to 'Show', recipe, id:"show", class:"link-hover" %></td>
        <td><%= link_to 'Edit', edit_recipe_path(recipe), id:"edit", class:"link-hover" %></td>
        <td><%= link_to 'Destroy', recipe, method: :delete, data: { confirm: 'Voulez vous vraiment supprimer cette recette ?' }, id:"destroy" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>

<nav>
<%= link_to "Publier une recette", new_recipe_path, class:"link-hover", id:"link-index" %>

<a href="/" data-turbolinks="false" class="link-hover">Home</a>
</nav>
</div>
